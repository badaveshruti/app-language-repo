<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawSreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="qnopy.com.qnopyandroid.ui.login.LoginActivity" >

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/bg_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <qnopy.com.qnopyandroid.fetchdraw.DrawingView
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/headerbg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/bottomLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp">

            <qnopy.com.qnopyandroid.fetchdraw.SpinnerReselect
                android:id="@+id/line"
                style="@style/SpinnerAsEditText"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:contentDescription="@string/desc" />


            <qnopy.com.qnopyandroid.fetchdraw.SpinnerReselect
                android:id="@+id/shapes"
                style="@style/SpinnerAsEditText"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:contentDescription="@string/desc" />

            <qnopy.com.qnopyandroid.fetchdraw.SpinnerReselect
                android:id="@+id/objects"
                style="@style/SpinnerAsEditText"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:contentDescription="@string/desc" />

            <qnopy.com.qnopyandroid.fetchdraw.SpinnerReselect
                android:id="@+id/tag"
                style="@style/SpinnerAsEditText"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:contentDescription="@string/desc" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/uppercolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bottomLay"
            android:orientation="horizontal"
            android:weightSum="4" >

            <ImageView
                android:id="@+id/red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:scaleType="fitXY"
                android:src="@mipmap/colred" />

            <ImageView
                android:id="@+id/blue1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:scaleType="fitXY"
                android:src="@mipmap/colblue1" />

            <ImageView
                android:id="@+id/blue2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:scaleType="fitXY"
                android:src="@mipmap/colblue2" />

            <ImageView
                android:id="@+id/green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:scaleType="fitXY"
                android:src="@mipmap/colgreen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uppercolor"
            android:layout_toRightOf="@+id/bottomLay"
            android:orientation="horizontal"
            android:weightSum="4" >

            <ImageView
                android:id="@+id/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:scaleType="fitXY"
                android:src="@mipmap/colblack" />

            <ImageView
                android:id="@+id/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:scaleType="fitXY"
                android:src="@mipmap/colwhite" />

            <ImageView
                android:id="@+id/magenta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:scaleType="fitXY"
                android:src="@mipmap/colmagenta" />

            <ImageView
                android:id="@+id/yellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:scaleType="fitXY"
                android:src="@mipmap/colyellow" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>