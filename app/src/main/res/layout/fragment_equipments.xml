<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayoutEquipments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="EquipmentsList"
    tools:context=".flowWithAdmin.ui.adminModule.equipment.equipmentList.EquipmentsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_damn_light">

        <ImageView
            android:id="@+id/ivStartOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.15"
            app:srcCompat="@drawable/ic_add_solid"
            app:tint="@color/event_start_blue" />

        <qnopy.com.qnopyandroid.customView.CustomTextView
            android:id="@+id/tvStartNewOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="Start New Order"
            android:textColor="@color/event_start_blue"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivStartOrder"
            app:layout_constraintStart_toEndOf="@+id/ivStartOrder"
            app:layout_constraintTop_toTopOf="@+id/ivStartOrder" />

        <ImageView
            android:id="@+id/ivStartOrderInfo"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_info"
            app:layout_constraintBottom_toBottomOf="@+id/tvStartNewOrder"
            app:layout_constraintStart_toEndOf="@+id/tvStartNewOrder"
            app:layout_constraintTop_toTopOf="@+id/tvStartNewOrder" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEquipmentOrders"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivStartOrder" />

        <qnopy.com.qnopyandroid.customView.CustomItalicTextView
            android:id="@+id/tvNoOrdersFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No orders found.. \nClick start new order to order equipments."
            android:textColor="@color/black_faint"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/rvEquipmentOrders"
            app:layout_constraintTop_toTopOf="@+id/rvEquipmentOrders" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
