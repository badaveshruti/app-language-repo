<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row_holder"
        android:padding="5dp">

        <TextView
            android:id="@+id/app_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/is_data_submitted"
            android:layout_toStartOf="@+id/is_data_submitted"
            android:padding="20sp"
            android:text="@string/app_name_text"
            android:textColor="#FFFFFF"
            android:textSize="20sp"   />

        <ImageView
            android:id="@+id/is_data_submitted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/navigate_to_form"
            android:layout_toStartOf="@+id/navigate_to_form"
            android:padding="10sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/navigate_to_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/arrow_next_form"
            android:padding="10sp" />
    </RelativeLayout>

</LinearLayout>