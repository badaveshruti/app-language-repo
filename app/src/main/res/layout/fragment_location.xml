<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_damn_light">

    <TextView
        android:id="@+id/location_attribute_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/selected_location_attribute_msg"
        android:textSize="@dimen/list_item_size"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/empty_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/no_field_points"
        android:textSize="@dimen/list_item_size" />

    <ListView
        android:id="@+id/locListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/location_attribute_header"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="true"
        android:paddingBottom="60dp"
        android:scrollbars="none"
        android:visibility="gone"
        tools:targetApi="lollipop" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLocations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/location_attribute_header"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <ProgressBar
        android:id="@+id/pbLocations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>