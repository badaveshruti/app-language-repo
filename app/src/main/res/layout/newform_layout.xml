<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp">

    <qnopy.com.qnopyandroid.customView.CustomTextView
        android:id="@+id/previewTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Preview"
        android:textColor="@color/event_start_blue"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/formTitle"
        app:layout_constraintEnd_toStartOf="@+id/formTitle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/formTitle"
        app:layout_constraintWidth_percent="0.15" />

    <qnopy.com.qnopyandroid.customView.CustomTextView
        android:id="@+id/formTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:layout_marginBottom="21dp"
        android:layout_marginTop="19dp"
        android:paddingBottom="5dp"
        android:text="title"
        android:textSize="14dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toStartOf="@id/assignButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/previewTv"
        app:layout_constraintTop_toTopOf="parent" />

    <qnopy.com.qnopyandroid.customView.CustomTextView
        android:id="@+id/assignButton"
        android:layout_width="88dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/event_start_blue"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/assign_projects"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/formTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/formTitle"
        app:layout_constraintTop_toBottomOf="@id/formTitle"
        app:layout_constraintTop_toTopOf="@id/formTitle"
        app:layout_constraintWidth_percent="0.3" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorLigtGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>