<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/childItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <qnopy.com.qnopyandroid.customView.CustomTextView
            android:id="@+id/tvContinueWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Continue With:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivInfoContinueWith"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_info"
            app:layout_constraintBottom_toBottomOf="@+id/tvContinueWith"
            app:layout_constraintStart_toEndOf="@+id/tvContinueWith"
            app:layout_constraintTop_toTopOf="@+id/tvContinueWith" />

        <ImageView
            android:id="@+id/ivDownloadRecentEventsData"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/downloadicon"
            app:layout_constraintBottom_toBottomOf="@+id/tvContinueWith"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvContinueWith" />

        <qnopy.com.qnopyandroid.customView.CustomTextView
            android:id="@+id/tvSeeAllEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="2dp"
            android:text="@string/see_all_events"
            android:textColor="@color/event_start_blue"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tvContinueWith"
            app:layout_constraintEnd_toStartOf="@+id/ivDownloadRecentEventsData"
            app:layout_constraintTop_toTopOf="@+id/tvContinueWith" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLatestEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContinueWith" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutForms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutEvents">

        <qnopy.com.qnopyandroid.customView.CustomTextView
            android:id="@+id/tvStartEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Start New Event"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivInfoStartNew"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_info"
            app:layout_constraintBottom_toBottomOf="@+id/tvStartEvent"
            app:layout_constraintStart_toEndOf="@+id/tvStartEvent"
            app:layout_constraintTop_toTopOf="@+id/tvStartEvent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvForms"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStartEvent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>