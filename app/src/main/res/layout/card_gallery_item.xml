<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="4sp"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <!--<com.facebook.drawee.view.SimpleDraweeView-->
            <!--android:id="@+id/cardImageView"-->
            <!--android:layout_width="110dp"-->
            <!--android:layout_height="110dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--fresco:placeholderImage="@drawable/progress_animation" />-->
            <LinearLayout
                android:id="@+id/site_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textViewSite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="Site"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/azimuth"
                    android:textColor="@color/qnopy_teal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/azimuthtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/qnopy_teal"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/cardImageView"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@+id/site_container"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/ic_menu_gallery"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/site_container"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/cardImageView"
                android:hint="@string/location"
                android:singleLine="true"
                android:text="@string/location" />


            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_below="@+id/textView6"
                android:layout_alignStart="@+id/textViewMobileApp"
                android:layout_alignLeft="@+id/textViewMobileApp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/cardImageView"
                android:hint="@string/date" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewNote"
                android:layout_alignStart="@+id/cardImageView"
                android:layout_alignLeft="@+id/cardImageView"
                android:layout_marginTop="5dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ivSetAsProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_photo_profile"
                    android:padding="5dp" />

                <ImageButton
                    android:id="@+id/ivRemoveAsProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_remove_profile"
                    android:padding="5dp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/drawButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/data_entry_drawing_icon"
                    android:padding="5dp" />

                <ImageButton
                    android:id="@+id/cardUpdateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/qnopy_gallery_edit_icon"
                    android:padding="5dp" />

                <ImageButton
                    android:id="@+id/cardDeleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/qnopy_gallery_delete_icon"
                    android:padding="5dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewMobileApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewLocation"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/cardImageView"
                android:hint="@string/form_name" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewMobileApp"
                android:layout_alignStart="@+id/textViewMobileApp"
                android:layout_alignLeft="@+id/textViewMobileApp"
                android:layout_marginTop="5dp"
                android:text="@string/set"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textViewSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView6"
                android:layout_toEndOf="@+id/textView6"
                android:layout_toRightOf="@+id/textView6"
                android:text="NA"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textViewNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardImageView"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>