<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/sitename1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#064169"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/add_form_field"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

        <Spinner
            android:id="@+id/spinnerlabel"
            style="?android:attr/spinnerItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:spinnerMode="dropdown" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textViewlabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight=".30"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/label"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#064169" />

            <TextView
                android:id="@+id/textViewspin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".30"
                android:gravity="center"
                android:padding="3dp"
                android:text="Spinner"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#064169" />

            <TextView
                android:id="@+id/textViewhead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight=".35"
                android:gravity="center"
                android:padding="3dp"
                android:text="Header Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#064169"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewinst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight=".35"
                android:gravity="center"
                android:padding="3dp"
                android:text="Instruction"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#064169"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageViewdel"
                android:layout_width="32dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollViewlab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="5dp">

            <LinearLayout
                android:id="@+id/label_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/labeldefaultItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/fieldlabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.90"
                        android:hint="Label " />

                    <Spinner
                        android:id="@+id/spinnerfieldtype"
                        android:layout_width="103dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="Type " />

                    <EditText
                        android:id="@+id/headerETL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight=".35"
                        android:gravity="center"
                        android:hint="Header"
                        android:imeOptions="actionNext"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/instructionETL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight=".35"
                        android:gravity="center"
                        android:hint="Instruction"
                        android:imeOptions="actionDone"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imageViewdele"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/savebuttonnew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#064169"
                android:text="SAVE"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/closebuttonnew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="#064169"
                android:text="CANCEL"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
