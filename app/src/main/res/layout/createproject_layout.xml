<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mat_gray_300"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnproj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/color_chooser_transparent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/project_name"
            android:textColor="@color/color_chooser_black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_card"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/project_name_with_colon"
                android:textColor="@color/color_chooser_black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edtsitename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/data_entry_control_bg"
                android:gravity="center"
                android:hint="@string/enter_text"
                android:padding="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/btndetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_chooser_transparent"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/add_details"
                android:textColor="@color/color_chooser_black"
                android:textSize="15dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imgadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/add"
                android:padding="5dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/minuschange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/minus"
                android:padding="5dp"
                android:visibility="gone" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/detailsll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp"

                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/sitenum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/site_number_with_colon"
                    android:textColor="@color/color_chooser_black"
                    android:textSize="15dp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/edtsitenum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/data_entry_control_bg"
                    android:gravity="center"
                    android:hint="@string/enter_text"
                    android:padding="8dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txt11"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/textborder"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/addr1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="@string/address_1"
                    android:textColor="@color/color_chooser_black"
                    android:textSize="15dp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/edtaddr1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/data_entry_control_bg"
                    android:gravity="center"
                    android:hint="@string/enter_text"
                    android:padding="8dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txt12"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/textborder"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txtaddr2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="@string/address_2"
                    android:textColor="@color/color_chooser_black"
                    android:textSize="15dp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/edtaddr2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/data_entry_control_bg"
                    android:gravity="center"
                    android:hint="@string/enter_text"
                    android:padding="8dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txt13"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/textborder"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txtcity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="City:"
                    android:textColor="@color/color_chooser_black"
                    android:textSize="15dp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/edtcity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/data_entry_control_bg"
                    android:gravity="center"
                    android:hint="Enter text"
                    android:padding="8dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txt15"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/textborder"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="Zip Code:"
                    android:textColor="@color/color_chooser_black"
                    android:textSize="15dp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/edtzip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/data_entry_control_bg"
                    android:gravity="center"
                    android:hint="@string/enter_text"
                    android:padding="8dp"
                    android:visibility="visible" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
