<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kmz_popup_bg"
    android:orientation="vertical">

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:gravity="center_horizontal"-->
    <!--android:orientation="vertical">-->

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/popuptitletxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:background="@color/qnopy_teal"
            android:gravity="center"
            android:hint="@string/title"
            android:padding="3dp"
            android:text="@string/no_title"
            android:textColor="@color/white" />

        <WebView
            android:id="@+id/location_details_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/okbtn"
            android:layout_below="@+id/popuptitletxt"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="false"
            android:layout_marginBottom="2dp"
            android:hint="@string/location_details">

        </WebView>

        <Button
            android:id="@+id/okbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@color/qnopy_teal"
            android:text="@string/ok"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>