<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MapDragActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSatellite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/satellite_view"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_satellite" />

    <ImageView
        android:id="@+id/ivMapPin"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:layout_above="@id/tvForSupport"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_pin" />

    <TextView
        android:id="@+id/tvForSupport"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />

</RelativeLayout>