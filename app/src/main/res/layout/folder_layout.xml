<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp">

    <qnopy.com.qnopyandroid.customView.CustomTextView
        android:id="@+id/folderTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="title"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/folderImgView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/folderImgView"
        android:layout_width="0dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/folderTitleTextView"
        app:layout_constraintEnd_toStartOf="@+id/folderTitleTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/folderTitleTextView"
        app:layout_constraintVertical_bias="0.571"
        app:layout_constraintWidth_percent="0.15"
        app:srcCompat="@drawable/ic_folder" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/silver"
        app:layout_constraintEnd_toEndOf="@id/folderTitleTextView"
        app:layout_constraintStart_toEndOf="@+id/folderImgView"
        app:layout_constraintTop_toBottomOf="@id/folderTitleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>