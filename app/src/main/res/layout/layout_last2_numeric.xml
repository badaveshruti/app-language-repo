<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <qnopy.com.qnopyandroid.customView.CustomEditText
        android:id="@+id/edtNumeric"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:hint="numeric"
        android:imeOptions="actionDone"
        android:inputType="number|numberDecimal|numberSigned"
        android:textColor="@color/black_faint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvPrevReading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <qnopy.com.qnopyandroid.customView.CustomTextView
        android:id="@+id/tvPrevReading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="-1"
        android:text="1.11, 1.1, 1.3"
        android:textColor="@color/black_faint"
        app:layout_constraintBottom_toBottomOf="@+id/edtNumeric"
        app:layout_constraintEnd_toStartOf="@+id/tvPrevPercent1"
        app:layout_constraintTop_toTopOf="@+id/edtNumeric" />

    <qnopy.com.qnopyandroid.customView.CustomTextView
        android:id="@+id/tvPrevPercent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="-1"
        android:padding="10sp"
        android:singleLine="true"
        android:text="11"
        android:textColor="@color/black_faint"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPrevReading"
        app:layout_constraintEnd_toStartOf="@+id/tvPrevPercent2"
        app:layout_constraintTop_toTopOf="@+id/tvPrevReading" />

    <qnopy.com.qnopyandroid.customView.CustomTextView
        android:id="@+id/tvPrevPercent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="-1"
        android:padding="10sp"
        android:singleLine="true"
        android:text="13"
        android:textColor="@color/black_faint"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPrevPercent1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPrevPercent1" />


</androidx.constraintlayout.widget.ConstraintLayout>