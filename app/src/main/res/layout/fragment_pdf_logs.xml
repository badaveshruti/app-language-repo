<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".flowWithAdmin.ui.adminModule.pdfLogs.PdfLogsFragment">

    <ImageView
        android:id="@+id/ivInfoPdfLogs"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <qnopy.com.qnopyandroid.customView.CustomEditText
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext_rounded_corner"
        android:drawableStart="@mipmap/search_icon"
        android:drawablePadding="5dp"
        android:hint="Search"
        android:imeOptions="actionDone"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivInfoPdfLogs" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filesRv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:reverseLayout="false" />

    <qnopy.com.qnopyandroid.customView.CustomItalicTextView
        android:id="@+id/tvNoPdfLogs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No pdf logs found"
        android:textColor="@color/black_faint"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/filesRv"
        app:layout_constraintEnd_toEndOf="@+id/filesRv"
        app:layout_constraintStart_toStartOf="@+id/filesRv"
        app:layout_constraintTop_toTopOf="@+id/filesRv" />

</androidx.constraintlayout.widget.ConstraintLayout>