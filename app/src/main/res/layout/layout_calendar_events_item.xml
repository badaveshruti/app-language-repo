<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <qnopy.com.qnopyandroid.customView.CustomTextView
                android:id="@+id/tvEventName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Event Name"
                android:textColor="@color/color_blue"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/btnCloseEvent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/btnCloseEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="2dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/tvEventName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvEventName">

                <ImageView
                    android:id="@+id/ivCheck"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/ic_check_circle_outline" />

                <qnopy.com.qnopyandroid.customView.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivCheck"
                    android:text="Finalize"
                    android:textColor="@color/finalize_button_red"
                    android:textSize="10sp" />

            </RelativeLayout>

            <qnopy.com.qnopyandroid.customView.CustomTextView
                android:id="@+id/tvSiteName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="SiteName"
                android:textColor="@color/color_black_semi"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/tvUpdateOnDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnCloseEvent" />

            <qnopy.com.qnopyandroid.customView.CustomTextView
                android:id="@+id/tvUpdateOnDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="NA"
                android:textColor="@color/color_black_semi"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvSiteName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvSiteName" />

            <qnopy.com.qnopyandroid.customView.CustomTextView
                android:id="@+id/tvFormName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="16dp"
                android:text="FormName"
                android:textColor="@color/color_black_semi"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSiteName" />

            <qnopy.com.qnopyandroid.customView.CustomTextView
                android:id="@+id/tvCreatedBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/created_by"
                android:textColor="@color/color_black_semi"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/tvUpdatedBy"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFormName" />

            <qnopy.com.qnopyandroid.customView.CustomTextView
                android:id="@+id/tvUpdatedBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="end"
                android:text="@string/by"
                android:textColor="@color/color_black_semi"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvCreatedBy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvCreatedBy"
                app:layout_constraintTop_toTopOf="@+id/tvCreatedBy" />

            <qnopy.com.qnopyandroid.customView.CustomTextView
                android:id="@+id/tvEmailLogs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_mail"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:text="@string/email_logs_lower"
                android:textColor="@color/event_start_blue"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvDownloadData"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCreatedBy"
                app:layout_constraintVertical_bias="0.0" />

            <qnopy.com.qnopyandroid.customView.CustomTextView
                android:id="@+id/tvDownloadData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:drawableStart="@drawable/ic_download_data"
                android:drawableLeft="@drawable/ic_download_data"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:text="@string/downloadYourData"
                android:textColor="@color/event_start_blue"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvEmailLogs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvEmailLogs"
                app:layout_constraintTop_toTopOf="@+id/tvEmailLogs"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
