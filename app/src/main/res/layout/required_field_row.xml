<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <qnopy.com.qnopyandroid.customView.CustomTextView
            android:id="@+id/tvLocName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Location Name"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textSize="@dimen/req_title_size" />

        <qnopy.com.qnopyandroid.customView.CustomTextView
            android:id="@+id/req_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLocName"
            android:hint="@string/form_name"
            android:padding="4dp"
            android:text="@string/form_name"
            android:textSize="14sp" />

        <qnopy.com.qnopyandroid.customView.CustomTextView
            android:id="@+id/req_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView24"
            android:layout_toEndOf="@+id/textView24"
            android:layout_toRightOf="@+id/textView24"
            android:hint="0"
            android:padding="3dp"
            android:text="0"
            android:textColor="@color/qnopy_teal" />

        <qnopy.com.qnopyandroid.customView.CustomTextView
            android:id="@+id/goto_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right_enabled"
            android:visibility="gone" />

        <qnopy.com.qnopyandroid.customView.CustomTextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/req_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:padding="3dp"
            android:text="@string/remaining_fields"
            android:textColor="@color/qnopy_teal" />
    </RelativeLayout>
</LinearLayout>