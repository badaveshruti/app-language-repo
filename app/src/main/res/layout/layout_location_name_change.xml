<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/textViewLocationNameChangeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/edit_field_point"
            android:textColor="@color/qnopy_teal"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewFieldPointName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewLocationNameChangeTitle"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:text="@string/field_point_name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextEnterFieldPointName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textViewFieldPointName"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_rounded_corner"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextEnterFieldPointName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="34dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/simple_grey"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/black_faint" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/qnopy_teal"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>