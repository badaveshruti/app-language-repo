<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">


                <TextView
                    android:id="@+id/txtTaskname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Task name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/qnopy_teal"
                    android:textColorHint="@color/grey_color_chooser"
                    android:textStyle="bold" />

                <!--<Switch
                    android:id="@+id/taskswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:checked="true"

                    />-->
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/taskswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:checked="true"
                    android:textOff="Off"
                    android:textOn="On" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:id="@+id/txtviewt3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="@color/color_chooser_black"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/txtlocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:hint="Location"
                    android:textColor="@color/color_chooser_black"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColorHint="@color/grey_color_chooser" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:id="@+id/txtviewt4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Due date"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_chooser_red1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/taskduedate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:hint="Due Date"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_chooser_red1"
                    android:textColorHint="@color/grey_color_chooser" />


                <ImageButton
                    android:id="@+id/gobtn"
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/arrow_right_disabled"
                    android:textColor="@color/white" />


            </LinearLayout>


            <!--    <ImageButton
                    android:id="@+id/gobtn"
                    android:layout_width="36dp"
                    android:layout_height="47dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="7dp"
                    android:background="@mipmap/navigate"
                    android:text="GO"
                    android:textColor="@color/white" />-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
