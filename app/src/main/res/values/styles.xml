<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!--<style name="AppBaseTheme" parent="android:Theme.Light">-->
    <!-- -->
    <style name="AppCompatTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="MyCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/event_start_blue</item>
    </style>

    <style name="WhiteCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/login_text_grey</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/splash_bg</item>
        <item name="colorPrimary">@color/qnopy_splash</item>
        <item name="colorPrimaryDark">@color/qnopy_splash</item>
        <item name="colorAccent">@color/qnopy_splash</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/qnopy_splash</item>
        <item name="colorPrimaryDark">@color/qnopy_splash</item>
        <item name="colorAccent">@color/qnopy_splash</item>
    </style>

    <style name="BottomNavTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/actionbar_teal</item>
        <item name="colorPrimaryDark">@color/actionbar_teal</item>
        <item name="colorAccent">@color/actionbar_teal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar -->
        <item name="searchBackground">@color/colorPrimary</item>

        <!-- Change voice icon -->
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search_inverted</item>

        <!-- Change clear text icon -->
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>

        <!-- Change up icon -->
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>

        <!-- Change icon for the suggestions -->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>

        <!-- Change background for the suggestions list view -->
        <item name="searchSuggestionBackground">@android:color/white</item>

        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">@color/theme_primary_text_inverted</item>

        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">@color/theme_secondary_text_inverted</item>
        <item name="android:textSize">@dimen/list_item_size</item>

        <!-- Hint for edit text -->
        <item name="android:hint">@string/search_hint</item>
    </style>

    <!--LOGIN UX-->
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/login_label_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextLabel">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/login_label_grey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/login_text_grey</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/login_text_grey</item>
        <item name="colorControlNormal">@color/login_text_grey</item>
        <item name="colorControlActivated">@color/login_text_grey</item>
    </style>


    <!--</style>-->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--MY THEME-->

    <style name="MyTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--below is added only for checkbox input type color in form-->
        <item name="checkboxStyle">@style/MyCheckboxStyle</item>
        <item name="android:checkboxStyle">@style/MyCheckboxStyle</item>
    </style>

    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Widget.ActionButton.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:contentDescription">@string/accessibility_overflow</item>

    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/qnopy_teal</item>
    </style>

    <style name="MyActionButtonStyle" parent="android:Widget.ActionButton">
        <item name="android:minWidth">28dip</item>
    </style>

    <style name="NewUiTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="color">@color/white</item>

        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="titleTextColor">@color/colorBlack</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="cust_dialog" parent="@android:style/Theme.Black.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SpinnerAsEditText" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:background">@mipmap/headerbg</item>
    </style>

    <style name="PopupTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <!-- For Markers app -->
    <style name="ActionBar">
        <item name="android:textSize">@dimen/ui_font_size</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="ActionBar.Bar">
        <item name="android:background">#FF000000</item>
    </style>

    <style name="ActionBar.NoteBar">
        <item name="android:background">@mipmap/submit_light_blue</item>
    </style>

    <style name="ActionBar.Text">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="ActionBar.Button" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">@dimen/ui_font_size</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="WrapContentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMajor">60%</item>
        <item name="windowMinWidthMinor">60%</item>
    </style>

    <style name="WrapContentDialogSeventy" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMajor">70%</item>
        <item name="windowMinWidthMinor">70%</item>
    </style>

    <style name="WrapContentDialogEighty" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMajor">80%</item>
        <item name="windowMinWidthMinor">80%</item>
    </style>

    <style name="ActionBar.Icon">
        <item name="android:background">@xml/action_button_bg</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/action_button_width</item>
        <item name="android:paddingTop">@dimen/action_button_padding_v</item>
        <item name="android:paddingBottom">@dimen/action_button_padding_v</item>
    </style>

    <style name="ActionBar.MenuItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/ui_font_size</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@xml/action_button_bg</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="ActionBar.Menu">
        <item name="android:background">#FF000000</item>
        <item name="android:gravity">right|top</item>
    </style>


    <!-- PopUp Animations-->
    <style name="Animations" />

    <!-- PopDownMenu -->
    <style name="Animations.PopDownMenu" />

    <style name="Animations.PopDownMenu.Left">
        <item name="android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.PopDownMenu.Right">
        <item name="android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations.PopDownMenu.Center">
        <item name="android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <!-- PopUpMenu -->
    <style name="Animations.PopUpMenu" />

    <style name="Animations.PopUpMenu.Left">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations.PopUpMenu.Right">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Animations.PopUpMenu.Center">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <!--Color Picker-->
    <style name="CustomPaintroidDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:linksClickable">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/text_color</item>
    </style>

    <style name="DialogWindowTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textColor">@color/dialog_title_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/dialog_title_color</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <string name="accessibility_overflow" translatable="false">Overflow_icon</string>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/transparent
        </item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.TransparentStatusBar" parent="AppTheme" />

    <style name="datetimePickerStyle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/teal_tile</item>
        <item name="colorAccent">@color/teal_tile</item>
        <item name="colorOnPrimary">@color/teal_tile</item>
    </style>

    <style name="dialogStyle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/teal_tile</item>
        <item name="colorOnPrimary">@color/teal_tile</item>
        <item name="windowMinWidthMajor">90%</item>
        <item name="windowMinWidthMinor">90%</item>

    </style>

    <style name="SwitchStyle">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="ProjectTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#E88549</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/ProjectTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorBlack</item>

    </style>

    <!-- for text -->
    <style name="ProjectTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_Gray</item>
        <item name="textAllCaps">false</item>
    </style>


</resources>